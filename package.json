{
  "name": "evernote-ai-importer",
  "version": "1.0.0",
  "description": "Import files to Evernote with AI-generated descriptions and tags using local Ollama",
  "main": "dist-electron/main.js",
  "scripts": {
    "pretest": "npm rebuild better-sqlite3",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "predev": "npx electron-rebuild -f -w better-sqlite3",
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite build && electron .",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "clean": "rm -rf dist-electron dist-renderer dist",
    "clean:deps": "rm -rf node_modules",
    "clean:all": "npm run clean && npm run clean:deps"
  },
  "keywords": [
    "evernote",
    "ai",
    "ollama",
    "import",
    "automation",
    "ocr"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.80",
    "@tanstack/react-query": "^5.90.5",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "evernote": "^2.0.5",
    "lucide-react": "^0.546.0",
    "mammoth": "^1.11.0",
    "ollama": "^0.6.0",
    "pdf-parse": "^2.4.3",
    "pdfjs-dist": "^5.4.296",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.8.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  }
}
