{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "./dist-electron",
    "rootDir": "./",
    "skipLibCheck": true,
    "types": ["node", "react", "react-dom"],
    "paths": {
      "@/*": ["./src/*"],
      "@electron/*": ["./electron/*"]
    }
  },
  "include": [
    "electron/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "dist-renderer",
    "release",
    "**/*.spec.ts"
  ]
}
